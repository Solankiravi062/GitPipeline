pipeline {
    agent any

    stages {
        stage('Development') {
            steps {
                echo 'Hello My code is developed'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Code is ready to deploy'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Waiting for testing status'
            }
        }
        
        stage('Deliver') {
            steps {
                echo 'Yupp...Code is ready to deliver.'
            }
        }
    }
}
